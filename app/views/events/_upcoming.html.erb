<div class="column is-three-quarters">
 <h1 class="title is-1">Upcoming Events</h1>
    <% @events.each do | event |%>
      <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <strong>@<%= event.creator.username %></strong><br /> 
            <p>Event: <%= event.name %></p>
            <p>Location: <%= event.location %></p>
            <p>Date: <%= event.date %></p>
            <p>Details: <%= event.description %></p>
          </div>
          <% if user_signed_in? %>
            <nav class="level">
              <div class="level-left is-mobile">
                <%= link_to 'View', event %>
                <%= button_to 'Attend', class: 'level-item' do %>
                  <span class='icon'><i class='button is-info is-inverted' aria-hidden='true'></i></span>
                <% end %>
              </div>
            </nav>
          <% end %>
        </div>
      </article>
    </div>
  <% end %>
</div>